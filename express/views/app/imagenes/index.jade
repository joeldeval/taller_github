extends ../../layoutSession.jade
block contenido
	div(class='container')
		h1 Mis im√°genes
		a(href='/app/imagenes/new', class='btn btn-primary right-space right') Nuevo
		br
		br
		for imagen in imagenes
			.white.border.tr.large-padding.col-md-6
				.row
					.col-md-12						
						h2=imagen.title
						img(src='/public/images/#{imagen.path}', height="200")
					.col-md-12
						br
						a(href='/app/imagenes/#{imagen._id}/edit', class='btn btn-primary right-space') Editar
						form(action='/app/imagenes/#{imagen._id}?_method=DELETE', method='POST', class='link')
							input(type='submit', class="btn btn-danger" value='Eliminar')