extends ../../layoutSession.jade

block contenido
	div(class="col-md-6 remove-float center-block top-space")
		h2 Imágen actual
		img(src='/public/images/#{imagen.path}', height="100")
		h1 Subir nueva imágen
		form(action='/app/imagenes/#{imagen._id}?_method=PUT', method='POST', enctype='multipart/form-data')
			div(class="form-group")
				label(for='title') Título
				input(type='text', name='title', placeholder='Título de la imágen...', id='title', class="form-control", value="#{imagen.title}")
			div
				label(for='archivo') Imágen
				input(type='file', name='archivo', id='archivo', class="form-control")
			div(class="row top-space")
				div(class="col-xs-12 col-sm-6")
					input(type="submit", value="Guardar" class="btn btn-info")